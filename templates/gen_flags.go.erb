<%- require_relative './utils.rb' -%>

package parser

<%- flags.each do |flag| -%>
<%- flag.values.each_with_index do |value, index| -%>
const <%= flag.name.snake_case.upcase %>_<%= value.name %> int16 = 1 << <%= index + Prism::Template::COMMON_FLAGS_COUNT %>
<%- end -%>

<%- flag.values.each do |value| -%>
func is<%= flag.name.pascal_case %><%= value.camelcase %>(flags int16) bool {
	return (flags & <%= flag.name.snake_case.upcase %>_<%= value.name %>) != 0
}
<%- end -%>
<%- end -%>
