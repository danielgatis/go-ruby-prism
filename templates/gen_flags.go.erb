package parser

<%-
const_prefix = lambda { |name| name.gsub("Flags", "").gsub(/([a-z])([A-Z])/, '\1_\2').upcase }
-%>

<%- flags.each do |flag| -%>
type <%= flag.name %> int16

const (
<%- flag.values.each_with_index do |value, index| -%>
  <%= const_prefix.call(flag.name) %>_<%= value.name %> <%= flag.name %> = 1 << <%= index %>
<%- end -%>
)

<%- end -%>
